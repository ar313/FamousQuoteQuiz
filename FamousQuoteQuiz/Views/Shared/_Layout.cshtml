
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/resources/js/jquery-3.4.1.min.js"></script>
    <script src="~/resources/js/bootstrap.min.js"></script>

    <link rel="stylesheet" runat="server" href="~/resources/css/bootstrap.min.css">
    <link rel="stylesheet" runat="server" media="screen" href="~/resources/css/style.css" />

</head>
<body>
    <div class="shell">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="">Famous Quote Quiz</a>
                </div>
                <ul class="nav nav-tabs navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Main" asp-action="Index">
                            Quiz
                         </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Main" asp-action="Settings">
                            Settings
                            </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            Users
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Quotes" asp-action="Index">
                            Quotes
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UserAnswers" asp-action="Index">
                            Answers
                        </a>
                    </li>
                </ul>

                <ul class="nav nav-tabs navbar-nav navbar-right">
                    

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form method="post" asp-controller="account" asp-action="Logout">
                                <button class="nav-link btn-down" type="submit">Logout </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <span class="glyphicon glyphicon-log-in"></span>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <span class="glyphicon glyphicon-user"></span>Register
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </div>

    <div class="main">
        <div class="shell">
            <div class="wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer">
    </footer>


</body>

</html>
