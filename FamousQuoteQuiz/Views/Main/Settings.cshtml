
@{
    ViewData["Title"] = "Settings";
}

    <div class="col--medium col--center">

        <div class="title">
            <h2>
                Settings
            </h2>
        </div>

        <ul class="settings__wrapper">
            <li>
                <input class="hidden" type="radio" id="binary" name="binary" value="Binary Quiz" />
                
                <label for="binary">
                    <a class="btn btn-info">
                        Yes and No Choice Quiz
                    </a>
                </label>
            </li>

            <li>
                <input class="hidden" type="radio" id="multiple" name="multiple" value="Multiple Choice Quiz" />
                
                <label for="multiple">
                    <a class="btn btn-info">
                        Multiple Choice Quiz
                    </a>
                </label>
            </li>
        </ul>

        <p class="changes-text"></p>
    </div>

<script src="~/resources/js/settings.js" type="text/javascript"></script>
