
@{
    ViewData["Title"] = "Main";
}

<div class="quiz hidden">
    <div class="col--medium col--center">
        <h2 class="title">
            Who said it?
        </h2>

        @if (!User.Identity.IsAuthenticated)
        {
            <p class="text-danger">You need to be logged in to save the answer</p>
        }

        <div class="question-group">
            <div class="question">
                <p class="quote">
                </p>
            </div>
        </div>

        <div class="author-wrapper hidden">
            <h4 class="quote-author author">
            </h4>
            <input class="btn btn-info btn-lg" type="button" value="Next" />
        </div>

        <div class="answers-group">
            <div class="binary hidden">

                <h4 class="author">
                </h4>

                <div class="btn-wrapper">
                    <input class="btn btn-lg btn-float--left btn-success" type="button" value="Yes" />
                    <input class="btn btn-lg btn-float--right btn-danger" type="button" value="No" />
                </div>
            </div>

            <div class="multiple hidden">
                <input class="btn btn-gray btn-lg" type="button" value="" />

                <input class="btn btn-gray btn-lg" type="button" value="" />

                <input class="btn btn-gray btn-lg" type="button" value="" />
            </div>
        </div>

        <div class="question-answer">
        </div>
    </div>
</div>

<script src="~/resources/js/main.js" type="text/javascript"></script>